<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sa90.onepreferencedemo">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".WebActivity" />

        <!-- include the library default Preferences Activities -->
        <activity android:name="com.sa90.onepreference.OnePreferenceActivity" />
        <activity
            android:name=".CustomLayoutActivity"
            android:label="@string/title_activity_custom_layout"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.sa90.onepreferencedemo.MainActivity" />
        </activity>

        <activity android:name=".HeaderManipulationActivity"/>
    </application>

</manifest>